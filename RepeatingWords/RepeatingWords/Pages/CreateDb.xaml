<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RepeatingWords.CreateDb"
             xmlns:local="clr-namespace:RepeatingWords;assembly=RepeatingWords"
             Style="{StaticResource TitleApp}">
  <StackLayout>
    <Label Text="{local:Translate LabelNameDict}" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Medium" TextColor="White"/>
   <Entry Text="{Binding Name}" Placeholder="{local:Translate EntryNameDict}" FontSize="Large" TextColor="Yellow"></Entry>
    <Button Style="{StaticResource buttonStyle}" Clicked="CreateDbButtonClick" Text="{local:Translate ButtonCreate}"></Button>
  </StackLayout>
  
</ContentPage>