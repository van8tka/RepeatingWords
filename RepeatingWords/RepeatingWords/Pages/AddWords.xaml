<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RepeatingWords.AddWords"
             xmlns:locale ="clr-namespace:RepeatingWords;assembly=RepeatingWords"
             Style="{StaticResource TitleApp}">
            
  <StackLayout>
    <Label x:Name="DictionaryName" HorizontalTextAlignment="Center" Style="{StaticResource LableHeadApp}" HeightRequest="200"/>
    <Button x:Name="BtAddWord" Style="{StaticResource buttonStyle}" Text="{locale:Translate ButtonAddWord}" Clicked="AddWordButtonClick"></Button>
    <Button x:Name="BtAddWordFrFile" Style="{StaticResource buttonStyle}" Text="{locale:Translate ButtonAddWorFrFile}" Clicked="AddWordsFromFileButtonClick"></Button>
    <Button x:Name="BtRemove" Style="{StaticResource buttonStyle}" Text="{locale:Translate ButtonRemove}" Clicked="DelleteDbButtonClick"></Button>
    <Button x:Name="BtShowWords" Style="{StaticResource buttonStyle}" Text="{locale:Translate ButtonShowWords}" Clicked="ShowWordsDbButtonClick"></Button>
    <ActivityIndicator x:Name="actIndicator4" Color="White"/>
  </StackLayout>
</ContentPage>
