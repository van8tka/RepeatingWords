<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RepeatingWords.AddWords"
             xmlns:locale ="clr-namespace:RepeatingWords;assembly=RepeatingWords"
             Style="{StaticResource TitleApp}">
            
  <StackLayout>
    <Label x:Name="DictionaryName" HorizontalTextAlignment="Center" FontSize="Medium" TextColor="White" HeightRequest="200"/>
    <Button Style="{StaticResource buttonStyle}" Text="{locale:Translate ButtonAddWord}" Clicked="AddWordButtonClick"></Button>
    <Button Style="{StaticResource buttonStyle}" Text="{locale:Translate ButtonAddWorFrFile}" Clicked="AddWordsFromFileButtonClick"></Button>
    <Button Style="{StaticResource buttonStyle}" Text="{locale:Translate ButtonRemove}" Clicked="DelleteDbButtonClick"></Button>
    <Button Style="{StaticResource buttonStyle}" Text="{locale:Translate ButtonShowWords}" Clicked="ShowWordsDbButtonClick"></Button>
  </StackLayout>
</ContentPage>