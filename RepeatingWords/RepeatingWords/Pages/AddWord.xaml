<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RepeatingWords.AddWord"
                xmlns:locale ="clr-namespace:RepeatingWords;assembly=RepeatingWords"
           Style="{StaticResource TitleApp}">
  <ScrollView>
    <StackLayout>
      <Label x:Name="DictionaryName"  VerticalOptions="Center" HorizontalOptions="Center" FontSize="Medium" TextColor="White"/>
      <Button Style="{StaticResource buttonStyle}" Text="{locale:Translate ButtonAddWord}" Clicked="CreateWordButtonClick"></Button>
      <Button Style="{StaticResource buttonStyle}" Text="{locale:Translate ButtonRepeatWords}" Clicked="RepeatWordsButtonClick"></Button>
   
      <ListView x:Name ="wordsList" ItemsSource="{Binding}" ItemSelected ="OnItemSelected" HasUnevenRows = "true" RowHeight = "-1" SeparatorColor="Green">
       <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>                                             
              <ViewCell.View>
              <Grid>
                <Grid.ColumnDefinitions>
                 <ColumnDefinition Width="1*">
                  </ColumnDefinition>
                  <ColumnDefinition Width="1*">
                  </ColumnDefinition>
                  <ColumnDefinition Width="1*">
                  </ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Text="{Binding RusWord}" TextColor="White" Grid.Column="0" FontSize="Medium">
                <!--<Label.FontSize>
                  <OnPlatform x:TypeArguments="x:Double">
                    <OnPlatform.Android>25</OnPlatform.Android>
                    <OnPlatform.WinPhone>15</OnPlatform.WinPhone>
                  </OnPlatform>
                </Label.FontSize>-->
                </Label>
                <Label Text="{Binding EngWord}" TextColor="Yellow" Grid.Column="1" FontSize="Medium" >
                  <!--<Label.FontSize>
                    <OnPlatform x:TypeArguments="x:Double">
                      <OnPlatform.Android>15</OnPlatform.Android>
                      <OnPlatform.WinPhone>15</OnPlatform.WinPhone>
                    </OnPlatform>
                  </Label.FontSize>-->
                </Label>
                <Label Text="{Binding Transcription}" TextColor="Gray" Grid.Column="2" FontSize="Medium">
                  <!--<Label.FontSize>
                    <OnPlatform x:TypeArguments="x:Double">
                      <OnPlatform.Android>25</OnPlatform.Android>
                      <OnPlatform.WinPhone>15</OnPlatform.WinPhone>
                    </OnPlatform>
                  </Label.FontSize>-->
                </Label>
              </Grid>
              </ViewCell.View>
                </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>

    </StackLayout>
  </ScrollView>
</ContentPage>